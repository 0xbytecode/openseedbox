# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Ignore favicon requests
GET /favicon.ico										404


# Static assets
GET /public/											staticDir:public

# Auth
* /auth/?													AuthController.login
* /auth/{action}											AuthController.{action}

# Admin screens
* /admin/?												AdminController.index
* /admin/{action}										AdminController.{action}

#Torrent client	
* /client/?												ClientController.index
* /client/files/?										ClientFilesController.index
* /client/files/{action}							ClientFilesController.{action}
* /client/settings/?									ClientSettingsController.index
* /client/settings/{action}						ClientSettingsController.{action}
* /client/{action}									ClientController.{action}

# Main
* /								MainController.index
* /{action}					MainController.{action}

# Catch all
* /{controller}/?									{controller}Controller.index
* /{controller}/{action}							{controller}Controller.{action}

